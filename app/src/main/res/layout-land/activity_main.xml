<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/labelCabecera"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/labelCabecera" />

    <TextView
        android:text="@string/labelAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/labelAltura"
        android:layout_below="@+id/labelCabecera"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/cajaAltura"
        android:layout_alignBaseline="@+id/labelAltura"
        android:layout_alignBottom="@+id/labelAltura"
        android:layout_toEndOf="@+id/labelAltura" />

    <TextView
        android:text="cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelCm"
        android:layout_alignBaseline="@+id/cajaAltura"
        android:layout_alignBottom="@+id/cajaAltura"
        android:layout_toEndOf="@+id/cajaAltura" />

    <TextView
        android:text="@string/labelPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelPeso"
        android:layout_alignBaseline="@+id/labelCm"
        android:layout_alignBottom="@+id/labelCm"
        android:layout_toEndOf="@+id/labelCm"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/cajaPeso"
        android:layout_alignBaseline="@+id/labelPeso"
        android:layout_alignBottom="@+id/labelPeso"
        android:layout_toEndOf="@+id/labelPeso" />

    <TextView
        android:text="kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelKg"
        android:layout_alignBaseline="@+id/cajaPeso"
        android:layout_alignBottom="@+id/cajaPeso"
        android:layout_toEndOf="@+id/cajaPeso" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linealRespuesta"
        android:layout_marginTop="100dp"></LinearLayout>

    <Button
        android:text="@string/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCalcular"
        android:layout_alignBaseline="@+id/labelKg"
        android:layout_alignBottom="@+id/labelKg"
        android:layout_alignParentEnd="true" />

</RelativeLayout>